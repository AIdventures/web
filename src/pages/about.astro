---
import Layout from '../layouts/Layout.astro';
import Main from '../components/Main.astro';

import {Image} from "astro:assets"
---

<Layout title="AIdventure - My name is Mario">
	<Main>
		
		<section class="py-20">
			<div class="container items-center max-w-6xl px-10 mx-auto sm:px-20 md:px-32 lg:px-16">
			  <div class="flex flex-wrap items-center -mx-3">
				<div class="order-1 w-full px-3 lg:w-1/2 lg:order-2">
				  <div class="w-full lg:max-w-md">
					<h1 class="mb-4 text-3xl font-bold leading-tight tracking-tight sm:text-4xl font-heading">
						I'm Mario Parre√±o
					</h1>
					<p class="mb-4 font-medium tracking-tight text-gray-400 xl:mb-6">
						I'm a Machine Learning engineer specializing in Computer Vision, automating problems that save companies time and money. I'm focused on tackling real-world problems with Deep Learning.
						Check my <a href="https://www.maparla.es/" target="_blank" class="underline">personal website</a> for more information.
					</p>
					<ul>
					  <li class="flex items-center py-2 space-x-4 xl:py-3">
						<svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#E88D9D" fill="none" stroke-linecap="round" stroke-linejoin="round">
