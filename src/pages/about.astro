---
import Layout from '../layouts/Layout.astro';
import Main from '../components/Main.astro';

import AbacusIcon from '../components/icons/AbacusIcon.astro';
import GamepadIcon from '../components/icons/GamepadIcon.astro';
import BackpackIcon from '../components/icons/BackpackIcon.astro';

import {Image} from "astro:assets"
---

<Layout title="AIdventure - My name is Mario" current_page="about">
	<Main>
		
		<section class="py-20 mb-12">
			<div class="container items-center max-w-6xl px-10 mx-auto sm:px-20 md:px-32 lg:px-16">
			  <div class="flex flex-wrap items-center -mx-3">
				<div class="order-1 w-full px-3 mb-8 lg:mb-0 lg:w-1/2 lg:order-2">
				  <div class="w-full lg:max-w-md">
					<h1 class="mb-4 text-3xl font-bold leading-tight tracking-tight sm:text-4xl font-heading">
						I'm Mario Parre√±o
					</h1>
					<p class="mb-4 font-medium tracking-tight text-gray-400 xl:mb-6">
						I'm a Machine Learning engineer specializing in Computer Vision, automating problems that save companies time and money. I'm focused on tackling real-world problems with Deep Learning.
						Check my <a href="https://www.maparla.es/" target="_blank" class="underline">personal website</a> for more information.
					</p>
					<ul>
					  <li class="flex items-center py-2 space-x-4 xl:py-3">
						<AbacusIcon />
						<span class="font-medium text-gray-500">
							Senior Machine Learning Engineer +4 years
						</span>
					  </li>
					  <li class="flex items-center py-2 space-x-4 xl:py-3">
						<GamepadIcon />
						<span class="font-medium text-gray-500">
							I like challenges and competitions
						</span>
					  </li>
					  <li class="flex items-center py-2 space-x-4 xl:py-3">
						<BackpackIcon />
						<span class="font-medium text-gray-500">
							Entrepreneurial spirit, I like to create things
						</span>
					  </li>
					</ul>
				  </div>
				</div>
				<div class="w-full px-1 lg:px-3 mb-12 lg:w-1/2 order-2 lg:order-1 lg:mb-0">
					<Image
						src="/me.webp"
						alt="test"
						width={800}
						height={450}
						format="webp"
						class="bottom-border aspect-thumbnail object-cover min-w-full rounded-xl shadow-lg lg:rounded-2xl lg:shadow-xl"
					/>
				</div>
			  </div>
			</div>
		  </section>
		
	</Main>
</Layout>
