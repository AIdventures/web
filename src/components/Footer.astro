---
import HeartIcon from './icons/HeartIcon.astro'
import LinkedinIcon from './icons/LinkedinIcon.astro'
import GithubIcon from './icons/GithubIcon.astro'
import KaggleIcon from './icons/KaggleIcon.astro'
import RSSIcon from './icons/RSSIcon.astro'
---

<footer class="bg-white border-t-2 border-black">
  <div class="p-8 lg:p-20 2xl:px-0 2xl:max-w-7xl mx-auto">
    <div class="h-full space-y-6">
      <div>
        <div
          class="w-full justify-between lg:inline-flex lg:items-start h-full gap-3"
        >
          <div class="flex flex-col">
            <h1 class="text-6xl font-black">AIdventure</h1>
            <div>
              <h3 class="text-sm text-black mt-8">
                Subscribe to don't miss any news!
              </h3><form
                class="border-black shadow bg-white border-2 justify-between mt-4 p-2 rounded-2xl sm:flex"
              >
                <label class="sr-only" for="email-address">Email address</label>
                <input
                  autocomplete="email"
                  class="w-full px-5 border-transparent focus:ring-black py-3 bg-transparent focus:border-black placeholder-black rounded-xl sm:max-w-xs"
                  id="email-address"
                  name="email"
                  placeholder="Enter your email"
                  required=""
                  type="email"
                /><div
                  class="ml-auto mt-3 rounded-md sm:flex-shrink-0 sm:ml-3 sm:mt-0"
                >
                  <button
                    class="items-center w-full border-black flex border-2 bg-black focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 font-medium hover:bg-lila-500 hover:text-black justify-center px-5 py-3 rounded-xl text-base text-white"
                    type="submit"
                  >
                    <HeartIcon /> Subscribe for free
                  </button>
                </div>
              </form>
            </div>
          </div>
          <div>
            <div class="md:gap-8 grid mt-8 lg:mt-0">
              <div>
                <ul class="space-y-2" role="list">
                  <li>
                    <a
                      href="/"
                      class="text-lg text-black hover:text-lila-900"
                      aria-current="page">Home</a
                    >
                  </li>
                  <li>
                    <a
                      href="/blog"
                      class="text-lg text-black hover:text-lila-900">Blog</a
                    >
                  </li>
                  <li>
                    <a
                      href="/about"
                      class="text-lg text-black hover:text-lila-900">About</a
                    >
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div>
        <div
          class="w-full justify-between lg:inline-flex lg:items-center lg:space-y-0 space-y-3"
        >
          <div>
            <p class="text-black text-sm">
              AIdventure - Â© Copyright 2023 . All rights reserved.
            </p>
          </div><div>
            <div class="flex space-x-6 md:order-2">
              <a href="https://www.linkedin.com/in/mario-parre%C3%B1o-lara-a33585125/" target="_blank" class="text-black hover:text-lila-900">
                <span class="sr-only">LinkedIn</span> <LinkedinIcon />
              </a>
              <a href="https://github.com/MarioProjects" target="_blank" class="text-black hover:text-lila-900">
                <span class="sr-only">GitHub</span> <GithubIcon />
              </a>
              <a href="https://www.kaggle.com/maparla" target="_blank" class="text-black hover:text-lila-900">
                <span class="sr-only">Kaggle</span> <KaggleIcon />
              </a>
              <a rel="alternate" type="application/rss+xml" 
                 title="AIdventure RSS Feed" 
                 href="rss.xml"
                 class="text-black hover:text-lila-900"
                >
                <span class="sr-only">AIdventure RSS Feed</span> <RSSIcon />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
