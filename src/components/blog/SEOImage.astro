---
import { Image } from "astro:assets";

type Props = {
  src: string;
  caption: string;
  alt: string;
  width: number;
  height: number;
  // default format is "webp"
  format?: "webp" | "png" | "jpeg" | "jpg" | "avif";
  // default class is "w-full rounded-2xl shadow-xl mt-6 object-cover"
  className?: string;
};

const {
  src,
  caption,
  alt,
  width,
  height,
  format = "webp",
  className = "w-full rounded-2xl shadow-xl mt-6 object-cover",
} = Astro.props;
---

<figure>
  <Image
    src={src}
    alt={alt}
    width={width}
    height={height}
    format={format}
    class={className + " lightbox cursor-zoom-in"}
  />
  <figcaption class="text-gray-300">{caption}</figcaption>
</figure>
